<% provide(:title, "Sign in")  %>
<div class="row container-fluid">
  <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-5 col-lg-offset-3 jumbotron">
    <h2>Sign in</h2>
    <p></p>
    <%= bootstrap_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>      
        <%= f.email_field :email, :autofocus => true, 
                  #required: true,
                  label: 'Your email address', hide_label: true,
                  placeholder: 'Email address' %>

      <%= f.form_group do %>
        <%= f.password_field :password, 
                  #required: true,
                    label: 'Your password', hide_label: true,
                    placeholder: 'Password',
                    help: (link_to "Forgot your password ?", new_password_path(resource_name) if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations') %>
      <% end %>
      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me, label: "Remember me" %>        
      <% end %>
      <%= f.submit "Sign in !" %>
  
    <% end %>
  </div>
</div>

