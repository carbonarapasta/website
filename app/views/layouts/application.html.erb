<!DOCTYPE html>
<html>
	<head>
		<title><%= t('app.name') %></title>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>

		<%= render partial: 'layouts/elements/navbar' %>

		<div class="container-fluid">
				<div class="col-xs-12">
					<% if notice %>
					  <p class="alert alert-success"><%= notice %></p>
					<% end %>
					<% if alert %>
					  <p class="alert alert-danger"><%= alert %></p>
					<% end %>

					<%= yield %>
				</div>
		</div>

		<% if Rails.env.development? %>
		<div class="container-fluid">
			<div class="col-xs-12">
				<%= debug(params)  %>
			</div>
		</div>
		<% end %>
	
	</body>
	<footer>
		<p>OMW - version alpha - mentions légales - politique de confidentialité - conditions générales </p>
	</footer>
</html>
